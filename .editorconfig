root = true

[*]
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = false

[*.{json,js,jsx,ts,tsx}]
tab_width = 2
indent_style = tab

[*.{css,scss}]
indent_style = tab
tab_width = 4

[*.sass]
indent_style = space
tab_width = 4

[*.{html,xhtml,htm,xml}]
indent_style = tab
tab_width = 4